// structure and union programs
#include <iostream>
using namespace std;

union money{
    int salary;
    char moneySymbol;
    bool fitna;
};

typedef struct student1{
    string name;
    int rollNo;
    int age;
    float cgpa; 
} st;   //short-cut hai ye (st) ye likhne se main function m pura initialize nhi krha pdega (see main fun)...

